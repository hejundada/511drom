/* pages/logins/logins.wxss */
.logins-logo{
    width: 100%;
    display: flex;
    flex-direction: row;
    justify-content: center;
    margin-top: 100rpx;
}

.logins-logo image{
    width: 160rpx;
    height: 160rpx;
}

.logins-userpass{
    width: 100%;
    display: flex;
    flex-direction: column;
    margin-top: 110rpx;
}

.logins-userpass form{
    width: 80%;
    margin: auto;
    display: flex;
    flex-direction: column;
}

.logins-userpass form .username{
    width: 100%;
    height: 130rpx;
    display: flex;
    flex-direction: column;
    position: relative;
}

.logins-userpass form .username .username-top{
    width: 100%;
    font-size: 30rpx;
    color: #51bdb0;
    position: absolute;
    left: 0;
    top: 0;
}

.logins-userpass form .username .username-bottom{
    width: 100%;
    font-size: 30rpx;
    color: #999999;
    position: absolute;
    left: 0;
    bottom: 50rpx;
}

.logins-userpass form .username input{
    width: 100%;
    height: 45rpx;
    line-height: 45rpx;
    font-size: 30rpx;
    color: #666666;
    border-bottom: 1px solid #e5e5e5;
    position: absolute;
    left: 0;
    bottom: 30rpx;
}

.logins-userpass form .username text{
    font-size: 24rpx;
    color: #ff0000;
    position: absolute;
    right: 0;
    bottom: 0;
}

.logins-userpass form .password{
    width: 100%;
    height: 130rpx;
    display: flex;
    flex-direction: column;
    position: relative;
}

.logins-userpass form .password .password-top{
    width: 100%;
    font-size: 30rpx;
    color: #51bdb0;
    position: absolute;
    left: 0;
    top: 0;
}

.logins-userpass form .password .password-bottom{
    width: 100%;
    font-size: 30rpx;
    color: #999999;
    position: absolute;
    left: 0;
    bottom: 50rpx;
}

.logins-userpass form .password input{
    width: 100%;
    height: 45rpx;
    line-height: 45rpx;
    font-size: 30rpx;
    color: #666666;
    border-bottom: 1px solid #e5e5e5;
    position: absolute;
    left: 0;
    bottom: 30rpx;
}

.logins-userpass form .password text{
    font-size: 24rpx;
    color: #ff0000;
    position: absolute;
    right: 0;
    bottom: 0;
}

.logins-submit{
    width: 100%;
    margin-top: 85rpx;
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
}

.logins-submit button{
     width: 80%;
     height: 80rpx;
     line-height: 80rpx;
     border-radius: 50rpx;
     border: none !important;
     font-size: 36rpx;
     color: #fff;
     background: linear-gradient(to right, #50bcac , #69e0ce);
}

.logins-submit .submit-hint{
     font-size: 28rpx;
     color: #ff0000;
     margin-top: 10rpx;
}