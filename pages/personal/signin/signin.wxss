/* pages/personal/signin/signin.wxss */

.signIn {
  width: 100%;
  height: auto;
}

.sign-com {
  width: 100%;
  height: auto;
  padding: 0 30rpx;
  box-sizing: border-box;
  overflow: hidden;
}

.sign-com .thead {
  width: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 50rpx 0 35rpx;
}

.sign-com .thead .tt {
  font-size: 32rpx;
  color: orange;
}

.sign-com .thead .mm {
  width: 180rpx;
  height: 180rpx;
  border-radius: 50px;
  background: linear-gradient(to right, #50bcac , #69e0ce);
  display: flex;
  flex-direction: row;
  align-items: center;
  justify-content: center;
  margin-top: 20rpx;
  color: #fff;
}

.sign-com .thead .mm .t1 {
  font-size: 80rpx;
}

.sign-com .thead .mm .t2 {
  font-size: 24rpx;
  margin-left: 10rpx;
  margin-top: 36rpx;
}

.sign-com .thead .pp {
  color: #999;
  font-size: 26rpx;
  margin-top: 10rpx;
}

.sign-com .modle {
  width: 100%;
  height: 100rpx;
  margin-top: 40rpx;
}

.sign-com .modle .mol {
  width: 100%;
  height: 52rpx;
  position: relative;
}

.sign-com .mol-line {
  width: 100%;
  height: 4rpx;
  background-color: #e6e6e6;
  position: absolute;
  left: 0;
  top: 50%;
  transform: translateY(-50%);
}

.sign-com .mol-ites {
  width: 100%;
  height: 100%;
  position: absolute;
}

.mol-ites .ite {
  width: 52rpx;
  height: 52rpx;
  border-radius: 50%;
  border: 1px solid #f5f5f5;
  background-color: #fff;
  box-sizing: border-box;
  position: absolute;
  left: 0;
  top: 0;
  z-index: 2;
}

.mol-ites .ite .n {
  width: 44rpx;
  height: 44rpx;
  line-height: 44rpx;
  text-align: center;
  border-radius: 50%;
  background-color: #f5f5f5;
  position: absolute;
  left: 50%;
  top: 50%;
  transform: translate(-50%, -50%);
  font-size: 22rpx;
}

.mol-ites .ite::after {
  content: "";
  width: 80rpx;
  height: 4rpx;
  background-color: transparent;
  position: absolute;
  left: 52rpx;
  top: 50%;
  margin-top: -2rpx;
  z-index: 2;
}

.mol-ites .ite:last-of-type::after {
  width: 0;
}

.mol-ites .ite:nth-of-type(2) {
  left: 107rpx;
}

.mol-ites .ite:nth-of-type(3) {
  left: 214rpx;
}

.mol-ites .ite:nth-of-type(4) {
  left: 321rpx;
}

.mol-ites .ite:nth-of-type(5) {
  left: 428rpx;
}

.mol-ites .ite:nth-of-type(6) {
  left: 535rpx;
}

.mol-ites .ite:nth-of-type(7) {
  left: 642rpx;
}

.mol-ites .ite.hover {
  border-color: #50bcac;
}

.mol-ites .ite.hover .n {
  background-color: #50bcac;
  color: #fff;
}

.mol-ites .ite.hover::after {
  background-color: #50bcac;
}

.moday {
  width: 100%;
  height: 60rpx;
  overflow: hidden;
  position: relative;
  margin-top: 20rpx;
}

.moday .dd {
  width: 52rpx;
  height: 60rpx;
  line-height: 1;
  text-align: center;
  font-size: 24rpx;
  position: absolute;
  color: #666;
  left: 0;
  bottom: 0;
}

.moday .dd:nth-of-type(2) {
  left: 107rpx;
}

.moday .dd:nth-of-type(3) {
  left: 214rpx;
}

.moday .dd:nth-of-type(4) {
  left: 321rpx;
}

.moday .dd:nth-of-type(5) {
  left: 428rpx;
}

.moday .dd:nth-of-type(6) {
  left: 535rpx;
}

.moday .dd:nth-of-type(7) {
  left: 642rpx;
}

.the-btn {
  width: 100%;
  margin-top: 200rpx;
}

.the-btn .btn {
  width: 80%;
  height: 80rpx;
  line-height: 80rpx;
  border-radius: 50rpx;
  border: none !important;
  font-size: 36rpx;
  color: #fff;
  background: linear-gradient(to right, #50bcac , #69e0ce);
}
