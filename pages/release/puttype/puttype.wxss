/* pages/release/puttype/puttype.wxss */
.puttype{
  width: 100%;
  display: flex;
  flex-direction: column;
}

.puttype .puttype-list{
  width: 100%;
  height: 90rpx;
  display: flex;
  flex-direction: row;
  align-items: center;
  border-bottom: 1px solid #e6e6e6;
  background-color: #fff;
  margin-bottom:10rpx;
}

.puttype-list .puttype-list-con{
  width: 92%;
  height: 90rpx;
  margin: auto;
  display: flex;
  flex-direction: row;
  align-items: center;
  position: relative;
}

.puttype-list-con text{
  font-size: 28rpx;
  color: #666;
}

.puttype-list-con .hint{
  position: absolute;
    width: 16rpx;
    height: 28rpx;
    right: 0rpx;
    top: 31rpx;
    display: flex;
    align-items: center;
}

.puttype-list-con .hint image{
    width: 100%;
    height: 100%;
} 
